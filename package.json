{
  "name": "encrypted-video-udisk",
  "version": "0.1.0",
  "private": true,
  "description": "加密视频U盘应用 - Electron + Vue3 + TypeScript",
  "author": "dulltackle",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dulltackle/EncryptedVideoUDisk.git"
  },
  "bugs": {
    "url": "https://github.com/dulltackle/EncryptedVideoUDisk/issues"
  },
  "homepage": "https://github.com/dulltackle/EncryptedVideoUDisk",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "main": "index.js",
  "scripts": {
    "prepare": "husky",
    "dev": "echo 'dev script will be added in T9' && exit 0",
    "build": "echo 'build script will be added in T11' && exit 0",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.vue --fix --cache",
    "lint:check": "eslint . --ext .js,.jsx,.ts,.tsx,.vue --cache",
    "lint:report": "eslint . --ext .js,.jsx,.ts,.tsx,.vue --format html --output-file eslint-report.html --cache",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "echo 'typecheck will be added in T3' && exit 0"
  },
  "keywords": [
    "electron",
    "vue3",
    "vite",
    "typescript",
    "element-plus",
    "windows",
    "video",
    "encryption"
  ],
  "dependencies": {
    "@ffmpeg/ffmpeg": "0.12.15",
    "crypto-js": "4.2.0",
    "electron": "22.3.27",
    "element-plus": "2.11.1",
    "node-forge": "1.3.1",
    "pinia": "2.3.1",
    "video.js": "8.23.4",
    "vue": "3.5.21",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@vitejs/plugin-vue": "4.6.2",
    "electron-builder": "24.13.3",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vue": "^10.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "terser": "5.44.0",
    "typescript": "5.9.2",
    "vite": "4.5.14"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,vue}": [
      "eslint --fix --cache",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
